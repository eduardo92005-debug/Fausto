{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="container">
        {% block banner %}
        <div class="row">
            <img class="w-75 mx-auto" src="{{ asset('images/content/carousel3.jpg') }}" height=150>
        </div>
        {% endblock %}
        <div class="row">
            <div class="col-md-6">
                <blockquote class="blockquote mx-5 mt-3">
                   {% block post_text_col_1 %}
                   {% endblock %}
                </blockquote>

            </div>
            <div class="col-md-6">
                <blockquote class="post-text blockquote mx-5 mt-3">
                    {% block post_text_col_2 %}
                    {% endblock %}
                </blockquote>
            </div>
        </div>
    </div>
{% endblock %}
